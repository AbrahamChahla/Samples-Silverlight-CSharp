<controls:ChildWindow x:Class="DesignerSaveLoad.MessageBoxWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:slControls="clr-namespace:Stimulsoft.Controls.SL;assembly=Stimulsoft.Controls.SL"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    Width="250" Title="MessageBoxWindow" HasCloseButton="False">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="4">Save changes in Report.mrt?</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <slControls:StiButton Name="btYes" Content="Yes" Click="btYes_Click" Width="75" Height="23" Margin="4"/>
            <slControls:StiButton Name="btNo" Content="No" Click="btNo_Click" Width="75" Height="23" Margin="4"/>
        </StackPanel>            
    </StackPanel>
</controls:ChildWindow>